<script type="text/javascript">
	$(document).ready(function(){

		$('#contact_adder').click(function(){

			var contact_object = {
				first_name: $('#first_name').val(),
				last_name:$('#last_name').val(),
				email: $('#email').val(),
				phone_number: $('#phone_number').val()
			};

        	// Send my event to db
        	$.ajax({
        		type: "POST",
        		url: "post_contact",
        		data: contact_object
        	});

		});

	});
</script>


<div class="row">
	<div class="col-md-12">
		<div class="contact-header">
			<h4> Create A New Contact </h4>
		</div>
		<div class="contact-input input-group col-md-4">
			<input type="text" class="form-control" placeholder="First Name" name="first_name" id="first_name"/>
		</div>
		<div class="contact-input input-group col-md-4">
			<input type="text" class="form-control" placeholder="Last Name" name="last_name" id="last_name"/>
		</div>
		<div class="contact-input input-group col-md-4">
			<input type="email" class="form-control" placeholder="Email" name="email" id="email"/>
		</div>
		<div class="contact-input input-group col-md-4">
			<input type="text" class="form-control" placeholder="Phone Number" name="phone_number" id="phone_number"/>
		</div>
		<div class="contact-input input-group col-md-4">
			<button id="contact_adder" class="btn btn-primary">Add to contacts</button>
		</div>
	</div>
</div>

