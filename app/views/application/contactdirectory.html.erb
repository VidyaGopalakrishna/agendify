<script type="text/javascript">
	$(document).ready(function(){

		$('#contact_adder').click(function(){

			var contact_object = {
				first_name: $('#first_name').val(),
				last_name:$('#last_name').val(),
				email: $('#email').val(),
				phone_number: $('#phone_number').val()
			};

        	// Send my event to db
        	$.ajax({
        		type: "POST",
        		url: "post_contact",
        		data: contact_object
        	});

		});

	});
</script>

<div>
<h1> Contact Directory Page</h1>
</div>

<label>First Name</label><input type="text" name="first_name" id="first_name"/>
<br>
<label>Last Name</label><input type="text" name="last_name" id="last_name"/>
<br>
<label>Email</label><input type="text" name="email" id="email"/>
<br>
<label>Phone Number</label><input type="text" name="phone_number" id="phone_number"/>
<br>
<button id="contact_adder" class="btn btn-primary">Add to contacts</button>

